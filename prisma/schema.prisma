  // This is your Prisma schema file,
  // learn more about it in the docs: https://pris.ly/d/prisma-schema

  generator client {
    provider = "prisma-client-js"
  }

  datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
  }

  model jogostatus {
    id          String   @id @map("_id")
    url         String
    rodada      String
    userid      String
  }

  model estoque {
    id          String   @id @map("_id")
    qtd         String
    rodada      String
    userid      String
    valor       String
    data        DateTime @default(now())
  }

    model gabarito {
    id          String   @id @map("_id")
    rodada      String
    url         String
  }

    model jogos {
    id            String   @id @map("_id")
    premio        String
    datacomeco    DateTime
    datafim       DateTime
    ganhador      String
    participantes String
    arrecadacao   String
  }

    model users {
    id            String @id @default(auto()) @map("_id") @db.ObjectId
    nome          String
    saldo         String
    date          DateTime @default(now())
    
  }