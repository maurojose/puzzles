  // This is your Prisma schema file,
  // learn more about it in the docs: https://pris.ly/d/prisma-schema

  generator client {
    provider = "prisma-client-js"
  }

  datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
  }

  model jogostatus {
    idunico     String @id @default(auto()) @map("_id") @db.ObjectId
    id          String
    url         String
    rodada      String
    userid      String
  }

  model estoque {
    idunico     String @id @default(auto()) @map("_id") @db.ObjectId
    id          String
    qtd         String?
    rodada      String
    userid      String
    url         String
    data        DateTime @default(now())
  }

    model gabarito {
    idunico     String @id @default(auto()) @map("_id") @db.ObjectId
    id          String
    rodada      String
    url         String
  }

    model jogos {
    id            String @id @default(auto()) @map("_id") @db.ObjectId
    premio        Int?
    datacomeco    DateTime @default(now())
    datafim       DateTime?
    ganhador      String?
    participantes Int?
    arrecadacao   Int?
    preco         Int
  }

    model users {
    id            String @id @default(auto()) @map("_id") @db.ObjectId
    nome          String
    saldo         String?
    date          DateTime @default(now())
    password      String?
    email         String
    
  }